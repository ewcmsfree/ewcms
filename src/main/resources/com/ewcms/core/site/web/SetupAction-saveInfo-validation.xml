<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
"http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">

<validators>
    <field name="siteVo.siteRoot">
        <field-validator type="requiredstring">
            <message>目录不能为空!</message>
        </field-validator>
       <field-validator type="regex">
            <param name="expression"><![CDATA[(^[0-9A-Za-z_]+$)]]></param>
            <message>目录格式错误!</message>
        </field-validator>        
    </field>
    
    <field name="siteVo.siteURL">
        <field-validator type="requiredstring">
            <message>URL不能为空!</message>
        </field-validator>
       <field-validator type="regex">
            <param name="expression"><![CDATA[([a-zA-z]+://[^\s]*)]]></param>
            <message>URL格式错误!</message>
        </field-validator>        
    </field>    
</validators>


