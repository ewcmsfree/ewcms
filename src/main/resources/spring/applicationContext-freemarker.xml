<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    
    <bean id="configurationFactoryBean" class="com.ewcms.publication.freemarker.EwcmsConfigurationFactoryBean">
        <property name="defaultEncoding" value = "UTF-8"/>
        <property name="cacheStorage" ref="cacheStorageTemplate"/>
    </bean>
    
    <bean id="cacheStorageTemplate" class="freemarker.cache.MruCacheStorage">
        <constructor-arg index="0" type="int" value="30"/>
        <constructor-arg index="1" type="int" value="500"/>
    </bean>
    
    <bean id="templatePreview" class="com.ewcms.publication.preview.TemplatePreview" autowire="byType"/>
    <bean id="schedulingPublish" class="com.ewcms.publication.SchedulingPublish" autowire="byType"/>
    <bean id="webPublish" class="com.ewcms.publication.WebPublish" autowire="byType"/>
    
</beans>
