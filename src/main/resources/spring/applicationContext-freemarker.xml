<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    
    <bean id="configurationFactoryBean" class="com.ewcms.publication.freemarker.EwcmsConfigurationFactoryBean">
        <property name="defaultEncoding" value = "UTF-8"/>
    </bean>
    
    <bean id="preview" class="com.ewcms.publication.preview.PreviewService" autowire="byType"/>
    <bean id="schedulingPublish" class="com.ewcms.publication.SchedulingPublish" autowire="byType"/>
    <bean id="webPublish" class="com.ewcms.publication.WebPublish" autowire="byType"/>
    
</beans>
