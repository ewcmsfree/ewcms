<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>	

    <package name="resource"  extends="struts-default" namespace="/resource">
        <action name="index" >
            <result type="dispatcher">/WEB-INF/page/resource/index.jsp</result>
        </action>
        <action name="manage" class="com.ewcms.content.resource.web.ManageAction">
            <result>/WEB-INF/page/resource/manage.jsp</result>
        </action>
        <action name="upload" class="com.ewcms.content.resource.web.UploadAction" method="input">
            <result>/WEB-INF/page/resource/upload.jsp</result>
        </action>
        <action name="receive" class="com.ewcms.content.resource.web.UploadAction" method="receive"/>
        <action name="thumbReceive" class="com.ewcms.content.resource.web.ThumbUploadAction" method="receive"/>
        <action name = "delete" class="com.ewcms.content.resource.web.OperatorAction" method="delete"/>
        <action name = "publish" class="com.ewcms.content.resource.web.OperatorAction" method="publish"/>
        <action name = "save" class="com.ewcms.content.resource.web.OperatorAction" method="save"/>
    </package>
</struts>
